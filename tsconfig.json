{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2016",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "@services/*": ["src/services/*"],
            "@utils/*": ["src/utils/*"],
            "@config/*": ["src/config/*"],
            "@models/*": ["src/models/*"],
            "@controllers/*": ["src/controllers/*"],
            "@routes/*": ["src/routes/*"],
            "@types/*": ["src/types/*"],
        }
    },
    "include": [
        "src/**/*"
    ]
}